import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import TSSLSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

from key_value_database import Key_Value_Database_Service
from key_value_database.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print('')
  print('Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] [-s[sl]] function [arg1 [arg2...]]')
  print('')
  print('Functions:')
  print('  Person get(i32 key)')
  print('  void put(i32 key, Person value)')
  print('   list_values()')
  print('  void delete_value(i32 key)')
  print('')
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
ssl = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

if sys.argv[argi] == '-s' or sys.argv[argi] == '-ssl':
  ssl = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSSLSocket.TSSLSocket(host, port, validate=False) if ssl else TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Key_Value_Database_Service.Client(protocol)
transport.open()

if cmd == 'get':
  if len(args) != 1:
    print('get requires 1 args')
    sys.exit(1)
  pp.pprint(client.get(eval(args[0]),))

elif cmd == 'put':
  if len(args) != 2:
    print('put requires 2 args')
    sys.exit(1)
  pp.pprint(client.put(eval(args[0]),eval(args[1]),))

elif cmd == 'list_values':
  if len(args) != 0:
    print('list_values requires 0 args')
    sys.exit(1)
  pp.pprint(client.list_values())

elif cmd == 'delete_value':
  if len(args) != 1:
    print('delete_value requires 1 args')
    sys.exit(1)
  pp.pprint(client.delete_value(eval(args[0]),))

else:
  print('Unrecognized method %s' % cmd)
  sys.exit(1)

transport.close()
